<main>
    <%- include('../partials/agentSidebar') %>
    
    <div id="main-wrapper">
        
        <div class="bg-white shadow-sm p-3">
            <span class="me-3" id="sidebar-toggler-btn"><i class="fas fa-bars"></i></span>
            <h5 class="m-0 color-theme d-inline-block">Pending Collections</h5>
        </div>
        
        <div class="col col-sm-10 col-12 m-auto my-4" style="max-height: 75%; overflow: auto;">
            <table class="table table-info table-striped table-hover m-0 bg-white">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Donor name</th>
                        <th scope="col">Address to collect</th>
                        <th scope="col">Phone</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(let i=0; i<pendingCollections.length; i++) { %>
                        <tr>
                            <th scope="row"><%= i+1 %></th>
                            <td>
                                <% if (pendingCollections[i].donor) { %>
                                    <%= pendingCollections[i].donor.firstName + " " + pendingCollections[i].donor.lastName %>
                                <% } else { %>
                                    Donor information not available
                                <% } %>
                            </td>
                            <td><%= pendingCollections[i].address %></td>
                            <td><%= pendingCollections[i].phone %></td>
                            <td>
                                <a href="/agent/collection/view/<%= pendingCollections[i]._id %>" class="btn btn-primary">View</a>
                                <a href="/agent/collection/collect/<%= pendingCollections[i]._id %>" class="btn btn-success">Collect</a>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
        
    </div>
</main>
