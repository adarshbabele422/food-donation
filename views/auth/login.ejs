<div class="row h-100">
	<div class="col-lg-7 m-auto"><img src="/assets/images/imglogin.jpg" class="card-img-top" alt=""></div>
<div class="col m-auto pt-5 mx-5 ">
	<form action="/auth/login" method="POST" class="form w-100 bg-white" style="min-width: 400px; background-color: transparent;">
		<h3 class="text-center mb-3">User Login</h3>
		<div class="mb-3">
			<!-- <label for="email" class="form-label">Email address</label> -->
			<input type="email" name="email" class="form-control" id="email" placeholder="Email address" required autofocus>
		</div>

		<div class="mb-3">
			<!-- <label for="password" class="form-label">Password</label> -->
			<input type="password" name="password" class="form-control" id="password" placeholder="Password" required>
		</div>
		
		<button type="submit" class="btn btn-warning w-100 mt-4 rounded-pill">Login</button>
		
		<div class="mt-3">
			<span>Don't have an account?</span>
			<a href="/auth/signup">Signup here</a>
		</div>
		<div class="mt-3">
			<span>Forgot Password</span>
			<a href="/auth/forgot-password">Click Here</a>
		</div>
		
	</form>
</div>
</div>